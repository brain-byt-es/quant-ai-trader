# ==============================================================================
# HEDGE FUND SYSTEM CONFIG (GLOBAL)
# ==============================================================================
PROJECT_NAME="QuantTrader AI"
ENVIRONMENT=development # development, staging, production

# --- CONNECTIVITY ---
# Frontend needs to know where the API is. No secrets here.
NEXT_PUBLIC_API_URL=http://localhost:8000
BACKEND_PORT=8000

# --- BROKERAGE & TRADING (Alpaca) ---
# Base URL is critical for switching between Paper (sandbox) and Live (real money)
ALPACA_API_KEY=your_alpaca_key
ALPACA_SECRET_KEY=your_alpaca_secret
ALPACA_API_BASE_URL=https://paper-api.alpaca.markets
TRADING_MODE=paper 

# --- MARKET DATA PROVIDERS ---
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINANCIAL_DATASETS_API_KEY=your_financial_datasets_key

# --- LLM COMMITTEE CONFIG ---
# Define which models the personas use by default
DEFAULT_LLM_PROVIDER=openai # openai, anthropic, gemini, ollama, deepseek
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
GEMINI_MODEL=gemini-1.5-pro

# Provider Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...
DEEPSEEK_API_KEY=...
GROQ_API_KEY=...
XAI_API_KEY=...
GIGACHAT_API_KEY=...
OPENROUTER_API_KEY=...

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=...
AZURE_OPENAI_DEPLOYMENT_NAME=...

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# --- DATABASE & PERSISTENCE ---
# Use absolute paths for SQLite in monorepos to avoid 'Inception' folder issues
DATABASE_URL=sqlite:///./backend/hedge_fund.db
REDIS_URL=redis://localhost:6379 # For real-time state if needed later